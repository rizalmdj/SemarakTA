<Window x:Class="DiagramDesigner.ButtonForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramDesigner"
        mc:Ignorable="d"
        Title="ButtonForm" Height="460" Width="620">
    <Grid>

        <Grid Height="88" VerticalAlignment="Top" Background="SkyBlue">
            <TextBlock Text="Button Form" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" FontFamily="Calibri"/>
        </Grid>

        <Label Content="XPath Button :" FontSize="24" HorizontalAlignment="Left" Margin="110,140.1,0,0" VerticalAlignment="Top"/>
        <TextBox Name="XpathButton" HorizontalAlignment="Left" Height="37.1" Margin="110,214.1,0,0" TextWrapping="Wrap" Text="" FontSize="24" VerticalAlignment="Top" Width="400.5"/>
        <Button Content="OK" FontSize="24" HorizontalAlignment="Left" Margin="414.5,292.2,0,0" VerticalAlignment="Top" Width="96" Click="Save"/>
        <Button Content="Cancel" FontSize="24" HorizontalAlignment="Left" Margin="270.5,292.2,0,0" VerticalAlignment="Top" Width="105"/>
    </Grid>


</Window>
